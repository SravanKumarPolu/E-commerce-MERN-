# ðŸš€ Frontend Environment Configuration

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_BACKEND_URL=http://localhost:3001
VITE_API_BASE_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=E-commerce Store
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern e-commerce platform with advanced features
VITE_APP_AUTHOR=Your Company Name

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=development

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# PayPal Configuration
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id
VITE_PAYPAL_CURRENCY=USD
VITE_PAYPAL_MODE=sandbox

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
VITE_STRIPE_CURRENCY=usd

# =============================================================================
# SOCIAL LOGIN CONFIGURATION
# =============================================================================
# Google OAuth
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_2FA=true
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_BIOMETRIC_AUTH=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_SMS_NOTIFICATIONS=false
VITE_ENABLE_AI_SECURITY=false
VITE_ENABLE_BLOCKCHAIN_INTEGRATION=false
VITE_ENABLE_A_B_TESTING=false
VITE_ENABLE_REAL_TIME_UPDATES=true

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================
VITE_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_REDUCED_MOTION=false
VITE_ENABLE_HIGH_CONTRAST=false
VITE_ENABLE_LARGE_TEXT=false

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_IMAGE_OPTIMIZATION=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_CACHE_STRATEGY=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
VITE_DEV_MODE=true
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_DEBUG_TOOLS=true
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_TEST_UTILITIES=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Production overrides (uncomment for production)
# VITE_DEV_MODE=false
# VITE_ENABLE_HOT_RELOAD=false
# VITE_ENABLE_DEBUG_TOOLS=false
# VITE_ENABLE_MOCK_DATA=false
# VITE_BACKEND_URL=https://your-api-domain.com
# VITE_API_BASE_URL=https://your-api-domain.com/api
# VITE_WS_URL=wss://your-api-domain.com 